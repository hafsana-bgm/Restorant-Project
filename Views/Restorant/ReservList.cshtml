@{
    ViewData["Title"] = "ReservList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@model IEnumerable<Restorant_Project.Models.ContactUs>
<!-- Default box -->
<div class="box">
	<div class="box-header with-border">
		<h3 class="box-title">Title</h3>
		<div class="box-tools pull-right">
			<button class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="Collapse"><i class="fa fa-minus"></i></button>
			<button class="btn btn-box-tool" data-widget="remove" data-toggle="tooltip" title="Remove"><i class="fa fa-times"></i></button>
		</div>
	</div>
	<div class="box-body">


		<div class="container my-5">

			<table class="table table-hover my-5">
				<thead class="table-info">
					<tr>
						<th>Serial</th>
						<th>Coustomer Name </th>
						<th>Customer Email </th>
						<th>Resarvation Date </th>
						<th>Customer Count</th>
						<th>Customer Message</th>
						<th>Action</th>




					</tr>
				</thead>

				<tbody>
					@{
						int serial = 1;
						foreach (var data in Model)
						{
							<tr>
								<td>@serial</td>
								<td>@data.Name</td>
								<td>@data.Email</td>
								<td>@data.DateTime</td>
								<td>@data.PeopleCount</td>
								<td>@data.Message</td>

								*<td>


									<a class="btn btn-warning" asp-route-id="@data.Id" asp-action="BlogEdit">Edit</a>

									@*<a class="btn btn-danger" asp-route-id="@data.BlogId" asp-action="BlogDelete">Delete</a>*@


								</td>

							</tr>

							serial++;


						}



					}


				</tbody>


			</table>


		</div>

	</div><!-- /.box-body -->
	
</div><!-- /.box --> 